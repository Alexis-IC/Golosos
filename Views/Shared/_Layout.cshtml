<body class="animsition">
    <!-- Header -->
    <header>
        <!-- Header desktop -->
        <div class="wrap-menu-header gradient1 trans-0-4">
            <div class="container h-full">
                <div class="wrap_header trans-0-3">
                    <!-- Logo -->
                    <div class="logo">
                        <a href="index.html">
                            <img src="@Url.Content("~/theme/images/icons/logo.png")" alt="IMG-LOGO" data-logofixed="@Url.Content("~/theme/images/icons/logo2.png")">
                        </a>
                    </div>

                    <!-- Menu -->
                    <div class="wrap_menu p-l-45 p-l-0-xl">
                        <nav class="menu">
                            <ul class="main_menu">
                                <li>@Html.ActionLink("Inicio", "Index", "Home")</li>

                                @if (user == null)
                                {
                                    <li>@Html.ActionLink("Ingresar", "Login", "Home")</li>
                                }
                                else if (user.idRol == 1)
                                {
                                    <li>@Html.ActionLink("cEmpleados", "Index", "Employees")</li>
                                }
                                else if (user.idRol == 2)
                                {
                                    <li>@Html.ActionLink("cVentas", "ControlVentas", "Employees")</li>
                                }
                                else
                                {
                                    <li>@Html.ActionLink("Ordenar", "Ordenar", "Employees")</li>
                                }

                                <li>@Html.ActionLink("Nosotros", "About", "Home")</li>

                                <li>@Html.ActionLink("Contáctanos", "Contact", "Home")</li>

                                @if (user != null)
                                {
                                    <li>@Html.ActionLink("Salir", "Logout", "Home")</li>
                                }
                            </ul>
                        </nav>
                    </div>

                    <!-- Social -->
                    <div class="social flex-w flex-l-m p-r-20">
                        <a href="https://www.instagram.com/panaderialosgolozos/" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a>
